{  "query": {
      "match_all": {}
   },
   "size": 0,
   "sort": {
      "ls": "desc"
   },
   "aggs": {
      "streams": {
         "terms": {
            "size": 100,
            "field": "stream"
         },
         "aggs": {
            "ls": {
               "terms": {
                  "size": 30,
                  "field": "ls",
                  "order": {
                     "_term": "desc"
                  }
               },
               "aggs": {
                  "in": {
                     "sum": {
                        "field": "data.in"
                     }
                  },
                  "out": {
                     "sum": {
                        "field": "data.out"
                     }
                  },
                  "error": {
                     "sum": {
                        "field": "data.ErrorEvents"
                     }
                  },
                  "filesize": {
                     "sum": {
                        "field": "data.fileSize"
                     }
                  },
                  "fm_date": {
                     "max": {
                        "field": "data.fm_date"
                     }
                  }
               }
            }
         }
      }
   }
}
